{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Compilar C++",
        "type": "shell",
        "command": "g++",
        "args": [
          "-g",
          "${workspaceFolder}/src/*.cpp",
          "-o",
          "${workspaceFolder}/bin/mi_programa.exe"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": ["$gcc"],
        "detail": "Compila archivos C++ en la carpeta src"
      }
    ]
  }